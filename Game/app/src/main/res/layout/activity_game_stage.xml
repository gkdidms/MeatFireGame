<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameStage"
    android:id="@+id/relativeLayout"
    android:background="@drawable/gogibackground">

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">

            <TextView
                android:id="@+id/txtTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/time"
                android:text="남은시간"
                android:fontFamily="@font/murukmuruk"
                android:textColor="#000000"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@+id/txtScore"
                android:background="@drawable/text"
                android:gravity="center"
                android:text="시간"
                android:textColor="#000000"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/txtScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/score"
                android:text="점수"
                android:fontFamily="@font/murukmuruk"
                android:textColor="#000000"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/text"
                android:gravity="center"
                android:text="0"
                android:textColor="#000000"
                android:textSize="25dp" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/framegogi"
            android:layout_width="500dp"
            android:layout_height="180dp"
            android:layout_marginTop="190dp"
            android:layout_marginLeft="100dp" />

        <GridLayout
            android:id="@+id/gridCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="20dp"
            android:columnCount="1"
            android:layout_alignParentRight="true">

            <ImageView
                android:id="@+id/count1"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:src="@drawable/gogicount" />

            <ImageView
                android:id="@+id/count2"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:src="@drawable/gogicount" />

            <ImageView
                android:id="@+id/count3"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:src="@drawable/gogicount" />

            <ImageView
                android:id="@+id/count4"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:src="@drawable/gogicount" />

            <ImageView
                android:id="@+id/count5"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:src="@drawable/gogicount" />
        </GridLayout>

    <FrameLayout
        android:id="@+id/finish"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_marginLeft="480dp"
        android:layout_marginTop="60dp"/>


    <ImageView
        android:id="@+id/imggogi1"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/gogi1" />
    <ImageView
        android:id="@+id/imggogi2"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/gogi2" />

    <ImageView
        android:id="@+id/imggogi3"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="70dp"
        android:src="@drawable/gogi3" />

    <ImageView
        android:id="@+id/imggogi4"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/gogi2" />

    <ImageView
        android:id="@+id/imggogi5"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/gogi1" />

    <ImageView
        android:id="@+id/imggogi6"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/gogi3" />

    <ImageView
        android:id="@+id/imggogi7"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/gogi1" />

    <ImageView
        android:id="@+id/imggogi8"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/gogi3" />

    <ImageView
        android:id="@+id/imggogi9"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/gogi1" />

    <ImageView
        android:id="@+id/imggogi10"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="70dp"
        android:src="@drawable/gogi1" />





</RelativeLayout>